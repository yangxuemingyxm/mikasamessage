<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <description>Spring MVC Configuration</description>

    <!-- 加载配置属性文件 -->
    <context:property-placeholder ignore-unresolvable="true" location="classpath:mikasamessage.properties"/>

    <!-- 使用 Annotation 自动注册 Bean,只扫描 @Controller -->
    <context:component-scan base-package="com.xingzi.mikasamessage.controller" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>

    <!-- 默认的注解映射的支持 -->
    <mvc:annotation-driven />

    <!-- 定义视图文件解析 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="${web.view.prefix}"/>
        <property name="suffix" value="${web.view.suffix}"/>
    </bean>
    <!--文件上传解析类-->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="20000000"/>
        <property name="defaultEncoding" value="utf-8"></property>
    </bean>

    <!-- 静态资源映射 -->
    <mvc:resources mapping="/static/**" location="/static/" cache-period="31536000"/>
    <!--拦截器-->
<mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <mvc:exclude-mapping path="/tianjiapengyou"/>
            <mvc:exclude-mapping path="/tianxiehaoyoushenqing"/>
            <mvc:exclude-mapping path="/login"/>
            <mvc:exclude-mapping path="/register"/>
            <mvc:exclude-mapping path="/yanzhengshenqing"/>
            <mvc:exclude-mapping path="/toweiyouquan"/>
            <mvc:exclude-mapping path="/togerenxinxi"/>
            <mvc:exclude-mapping path="/faBuDongTai"/>
            <mvc:exclude-mapping path="/192.168.1.5/9900/aliyun/oss/upload"/>
            <mvc:exclude-mapping path="/toFaBiaoDongTai"/>
            <mvc:exclude-mapping path="/findUser"/>
            <mvc:exclude-mapping path="/getFrindListByUserId"/>
            <mvc:exclude-mapping path="/tongxunlu"/>
            <mvc:exclude-mapping path="/findUserById"/>
            <mvc:exclude-mapping path="/toRegister"/><!--此处为跳转页面-->
            <mvc:exclude-mapping path="/static/**"/>
           <bean class="com.xingzi.mikasamessage.interceptor.LoginInterceptor"/>
        </mvc:interceptor>
       <mvc:interceptor>
           <mvc:mapping path="/login"/>
           <bean class="com.xingzi.mikasamessage.interceptor.PermissionInterceptor"/>
       </mvc:interceptor>
    </mvc:interceptors>
</beans>